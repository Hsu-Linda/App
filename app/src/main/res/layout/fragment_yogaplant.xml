<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".fragments.Yogaplant">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_yoga2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="平板式 Plank Pose"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="italic"
        />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/ssn46sss7"
             />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="解說：\n  手掌與手臂貼地，腳往後放\n  感覺腳踢著一面牆\n  維持姿勢腹部撐起，感受身體核心出力\n作用：\n  訓練核心肌群，達到瘦身效果：）\n備註：\n  腹部一定要撐起不要垂下\n時間：\n  20~40s\n\n"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="430dp" />

    <Button
        android:id="@+id/backmountain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="BACK"
        android:textSize="18dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/nextsnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="NEXT"
        android:textSize="18dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

</FrameLayout>


</ScrollView>