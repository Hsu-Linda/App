<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".MainActivity3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >


                <ImageView
                    android:id="@+id/iv_yoga1"
                    android:layout_width="match_parent"
                    android:layout_height="388dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/ddf31s0nr0q8507" />

                <TextView
                    android:id="@+id/tv_yoga"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:text="山式 Mountain Pose"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="italic"
                    tools:layout_editor_absoluteY="26dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDark"
                    android:text="解說：\n雙腳併攏，身體站直\n肩膀上提後轉，使胸挺起(記得收肚肚)\n雙手自然垂下：）\n維持姿勢，感受身體為持平衡力道
                        \n作用：\n讓自己維持中立，維持平衡\n備註：\n腳跟記得併攏\n時間：\n20~40s"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="430dp"

                    />


        </FrameLayout>

</ScrollView>